{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B ${cwd}/out/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "icon": {
                "id": "tools"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/out/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/out/build"
            },
            "group": "build",
            "icon": {
                "id": "file-binary"
            }
        }
    ]
}